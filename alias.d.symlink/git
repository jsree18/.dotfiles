# Aliases

# Common
alias g='git'
alias gs='git status'
alias gst='git status'
alias gss='git status -s'
alias gcl='git clone'
alias ga='git add'
alias grm='git rm'
alias gap='git add -p'
alias gall='git add -A'

alias gm="git merge"
alias gmv='git mv'

# Fetch
alias gf='git fetch'
alias gfa='git fetch --all --prune'
alias gfat='git fetch --all --prune --tags'
alias gfav='git fetch --all --prune --verbose'
alias gfatv='git fetch --all --prune --tags --verbose'

# Reset/clean
alias grst='git reset HEAD'
alias gpristine='git reset --hard && git clean -dfx'
alias gclean='git clean -fdx'

alias gfr='git fetch && git rebase'
# Pull/Update
alias gp='git pull'
alias gpo='git pull origin'
alias gpom='git pull origin master'
alias gpum='git pull upstream master'
alias gpr='git pull --rebase'
alias gpra='git pull --rebase --autostash'
alias gpp='git pull && git push'
# Git Submodules
alias gsu='git submodule update --recursive'
alias gsui='git submodule update --init --recursive'

# Push
alias gph='git push'
alias gpho='git push origin'
alias gphu='git push --set-upstream'
alias gphuo='git push --set-upstream origin'
alias gphom='git push origin master'

# Remote
alias gr='git remote'
alias grv='git remote -v'
alias gra='git remote add'

# Diff
alias gd='git diff'
# Commeting below as fish cries
#alias gdv='git diff -w "$@" | vim -R -'

# Commit
alias gc='git commit'
alias gcv='git commit -v'
alias gca='git commit -a'
alias gcva='git commit -v -a'
alias gcm='git commit -m'
alias gcvm='git commit -v -m'
alias gcam="git commit -am"
alias gcvam="git commit -v -am"
alias gci='git commit --interactive'
alias gcaa="git commit -a --amend -C HEAD"
alias gcsam="git commit -S -am"

# Branch
alias gb='git branch'
alias gba='git branch -a'
alias gbt='git branch --track'
alias gbm='git branch -m'
alias gbd='git branch -d'
alias gbD='git branch -D'

alias gcount='git shortlog -sn'
alias gcp='git cherry-pick'

# Checkout
alias gco='git checkout'
alias gcom='git checkout master'
alias gcob='git checkout -b'
alias gcot='git checkout --track'

# Export
alias gexport='git archive --format zip --output'

alias gmu='git fetch origin -v; git fetch upstream -v; git merge upstream/master'
alias gll='git log --graph --pretty=oneline --abbrev-commit'
alias gg="git log --graph --pretty=format:'%C(bold)%h%Creset%C(magenta)%d%Creset %s %C(yellow)<%an> %C(cyan)(%cr)%Creset' --abbrev-commit --date=relative"
alias ggs="gg --stat"
alias gsl="git shortlog -sn"
alias gwc="git whatchanged"

# Tags
alias gt="git tag"
alias gta="git tag -a"
alias gtd="git tag -d"
alias gtl="git tag -l"

# From http://blogs.atlassian.com/2014/10/advanced-git-aliases/
# Show commits since last pull
alias gnew="git log HEAD@{1}..HEAD@{0}"
# Add uncommitted and unstaged changes to the last commit

alias ggui="git gui"

# Stash
alias gstd="git stash drop"
alias gstl="git stash list"

# Commeting below as fish cries
#alias gh='cd "$(git rev-parse --show-toplevel)"'
